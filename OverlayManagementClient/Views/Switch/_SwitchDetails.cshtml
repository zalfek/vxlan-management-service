@model OverlayManagementClient.Models.OpenVirtualSwitch


<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Switch Details</h3>
        <div class="btn-group" role="group">
            <form method="post">
                <button asp-controller="Switch" asp-action="Delete" asp-route-key="@Model.Key" class="btn btn-danger mx-1">Delete swich</button>
            </form>
            <button type="button" class="btn btn-danger mx-1" data-bs-dismiss="modal" aria-hidden="true">X</button>
        </div>
    </div>
    <div class="modal-body">
        <hr />
        <div class="row">
            <div class="col-md">
                <form asp-action="_switchDetails">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Key" class="control-label"></label>
                        <input asp-for="Key" readonly class="form-control" />
                        <span asp-validation-for="Key" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManagementIp" class="control-label"></label>
                        <input asp-for="ManagementIp" readonly class="form-control" />
                        <span asp-validation-for="ManagementIp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrivateIP" class="control-label"></label>
                        <input asp-for="PrivateIP" readonly class="form-control" />
                        <span asp-validation-for="PrivateIP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublicIP" class="control-label"></label>
                        <input asp-for="PublicIP" readonly class="form-control" />
                        <span asp-validation-for="PublicIP" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
