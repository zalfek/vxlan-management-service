@model OverlayManagementClient.Models.OpenVirtualSwitch

<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Create Switch</h3>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-danger mx-1" data-bs-dismiss="modal" aria-hidden="true">X</button>
        </div>
    </div>
    <div class="modal-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PrivateIP" class="control-label">Virtual Switch private IP(Towards target devices)</label>
                        <input asp-for="PrivateIP" class="form-control" />
                        <span asp-validation-for="PrivateIP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublicIP" class="control-label">Virtual Switch public IP(Towards target clients)</label>
                        <input asp-for="PublicIP" class="form-control" />
                        <span asp-validation-for="PublicIP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Key" class="control-label">Network switch prefix(f.e thu)</label>
                        <input asp-for="Key" class="form-control" />
                        <span asp-validation-for="Key" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManagementIp" class="control-label">Open Virtual Switch management IP address</label>
                        <input asp-for="ManagementIp" class="form-control" />
                        <span asp-validation-for="ManagementIp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
